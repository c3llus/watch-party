# =============================================================================
# Watch Party Application - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env with production secrets!

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Server port for the API service
PORT=8080

# JWT configuration
# SECURITY: Generate a strong, random secret for production!
# Generate with: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-here-generate-with-openssl-rand-hex-32

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL database settings
DB_NAME=watch_party
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your-database-password
DB_DATABASE=watch_party

# Database connection pool settings
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=15m

# SSL mode for database connections
# Options: disable, require, verify-ca, verify-full
DB_SSL_MODE=disable

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: debug, info, warn, error
LOG_LEVEL=debug

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
# Storage provider: local or gcs
STORAGE_PROVIDER=local
STORAGE_LOCAL_PATH=./uploads
STORAGE_GCS_BUCKET=your-gcs-bucket-name
STORAGE_GCS_CREDENTIALS_PATH=path/to/your/gcs-credentials.json

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Email provider: smtp or sendgrid
EMAIL_PROVIDER=smtp

# -----------------------------------------------------------------------------
# SMTP Configuration (when EMAIL_PROVIDER=smtp)
# -----------------------------------------------------------------------------
# Use this for generic SMTP servers (Gmail, Outlook, etc.)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=your-email@example.com
EMAIL_SMTP_PASSWORD=your-email-password-or-app-password
EMAIL_SMTP_USE_TLS=true

# -----------------------------------------------------------------------------
# SendGrid Configuration (when EMAIL_PROVIDER=sendgrid)
# -----------------------------------------------------------------------------
# Use this for SendGrid email service
EMAIL_SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_SENDGRID_FROM_EMAIL=noreply@yourcompany.com
EMAIL_SENDGRID_FROM_NAME=WatchParty

# -----------------------------------------------------------------------------
# Email Template Configuration
# -----------------------------------------------------------------------------
# Base URL for email templates and links
EMAIL_TEMPLATE_BASE_URL=http://localhost:3000
EMAIL_TEMPLATE_APP_NAME=WatchParty

# =============================================================================
# OPTIONAL CONFIGURATIONS
# =============================================================================

# CORS configuration (uncomment if needed)
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# File upload configuration
# MAX_UPLOAD_SIZE=1073741824  # 1GB in bytes

# Rate limiting configuration
# RATE_LIMIT_PER_MINUTE=100

# Redis configuration (uncomment if using Redis for caching/sessions)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# Google Cloud Platform configuration (for production deployment)
# GOOGLE_CLOUD_PROJECT=your-project-id
# GCS_BUCKET_NAME=your-media-bucket
